/* ==UserStyle==
@name           gruvbox docs.rs
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    A new userstyle
@author         Me
@preprocessor stylus
==/UserStyle== */
@-moz-document domain("docs.rs"),
domain("doc.rust-lang.org"),
url-prefix("https://gtk-rs.org/docs/") {
    :root {
        --bg0: #1d2021;
        --bg1: #222222;
        --bg2: #282828;
        --bg3: #504945;
        --bg4: #202020;
        --fg0: #ebdbb2;
        --fg1: #fbf1c7;
        --fg2: #d5c4a1;
        --fg3: #a89984;
        --col_blue: #83a598;
        --col_accent: #8ec07c;
        --col_accent_dark: #8ec07c;
        --col_yellow: #fabd2f;
        --col_red: #fb4934;
        --border: rgb(53, 51, 49);

        --monospaced: "Jetbrains Mono";
        --monospaced-size: 14px;
        --monospaced-small: cozette;
    }


    * {
        color: var(--fg0);
        border-color: var(--fg3) !important;
    }

    a {
        color: unset;
    }

    .content span.externcrate,
    .content span.mod,
    .content a.mod,
    .block a.current.mod,
    .docblock:not(.type-decl) a:not(.srclink):not(.test-arrow),
    .docblock-short a:not(.srclink):not(.test-arrow),
    .stability a {
        color: var(--col_accent);
    }

    .help-button {
        background: var(--bg1);
        margin-top: 3px;
        border: none;
    }

    .nav-container,
    .description-container {
        background-color: var(--bg2) !important;
        border: none !important;
        & * {
            color: var(--fg1) !important;
            border: none !important;
        }
    }


    .in-band {
        background: none;
    }


    button#theme-picker {
        display: none;
    }
    #settings-menu {
        background-color: inherit;
        border: none;
        transform: translateY(4px);
    }

    input#nav-search {
        padding-left: 1rem;
        background-color: inherit !important;
    }

    nav {
        .search-container {
            input,
            #crate-search,
            input:focus,
            crate-search:focus {
                background-image: none;
                outline: none;
                color: var(--fg1) !important;
                border: 1px solid var(--border) !important;
                box-shadow: 2px 2px 5px 0px rgba(0, 0, 0, 0.5) !important;
                background-color: var(--bg4) !important;
            }
            input,
            input:focus {
                border-left: none !important;
            }
            #crate-search,
            #crate-search:focus {
                padding-right: 1.4rem;
                border-right: none !important;
            }
        }
        &:not(.sidebar) {
            border-bottom: none;
        }
    }

    .sidebar {
        background-color: var(--bg1) !important;
        box-shadow: inset -3px 5px 15px 0 rgba(0, 0, 0, 0.2);
        scrollbar-width: thin !important;
        .logo-container {
            display: none;
        }
        & * {
            color: var(--fg0);
        }
        h1,
        h2,
        h3,
        .sidebar-title {
            color: var(--col_accent) !important;
        }

        #all-types,
        .location {
            background-color: var(--bg0);
            color: var(--fg1);
            border-color: var(--fg1);
            border-width: 1px;
            padding: 0.2rem;
            border-radius: 0;
        }



        .block {
            a {
                &.current {
                    background-color: var(--col_accent) !important;
                    color: var(--bg2);
                    margin-right: 1.5rem;
                }
            }
        }
    }

    .pure-menu-children {
        background-color: var(--bg2);
        box-shadow: 2px 2px 10px 0 rgba(0, 0, 0, 0.5);
    }

    #search {
        #titles > div:hover,
        #titles > div {
            background-color: var(--bg1);
            margin-top: -0.5rem;
            padding: 0.25rem;
            &.selected {
                border-top-color: var(--col_accent);
            }
            &:not(.selected) {
                border-top-color: var(--bg1);
            }
        }
        .result {
            span:not(.desc) {
                font-family: var(--monospaced);
            }
            span.desc {
                color: var(--fg0);
            }
        }
    }


    #rustdoc_body_wrapper,
    html,
    body {
        background-color: var(--bg2) !important;
        color: var(--fg1);
        h1,
        h2,
        h3 {
            color: var(--fg1);
        }
        code {
            background-color: inherit;
            font-family: var(--monospaced);
            font-size: var(--monospaced-size);
        }

        a.srclink {
            padding: 0rem 1rem;
            color: var(--col_accent);
        }
        .collapse-toggle {
            transform: translateY(-3px);
            color: var(--fg3);
        }
    }
    
    /* docs.rs root */
    input#search {
        background-color: var(--bg0);
        border: none !important;
        box-shadow: none !important;
    }
    
    .pure-button-normal {
        background: var(--bg0) !important;
        color: var(--fg2);
        border-color: var(--bg3) !important;
    }

    /* search result list */
    .recent-releases-container {
        .date {
            color: var(--fg3);
        }
        *:not(.date) {
            color: var(--fg1) !important;
        }
        *:hover {
            background-color: inherit !important;
        }
    }


    pre {
        font-family: var(--monospaced);
    }
    pre.rust {
        background: var(--bg0) !important;
        .kw {
            color: var(--col_blue);
        }
        .self,
        .bool-val,
        .prelude-val,
        .attribute,
        .attribute .ident {
            color: var(--col_accent);
        }
    }
    
    .warning {
        background-color: var(--col_blue) !important;
        color: var(--bg1);
    }
    
    
    
    .pure-menu {
        .pure-menu-list * {
            color: var(--fg1) !important;
        }
        .pure-menu-link:hover {
            background-color: var(--bg0) !important;
        }
        .pure-menu-active {
            background-color: var(--bg4) !important;
            border-bottom: 1px solid var(--fg3) !important;
        }
    }
    
    
    
    
}
